@model IEnumerable<DaitationProject.Entity.Appointments>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="table_id" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppStatus.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th></th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            if (item.StatusID == 1)
            {
               
                <tr style="background:orange">
                    <td>

                        @Html.DisplayFor(modelItem => item.PatientName)
                        <input type="text" name="Patient_Name" hidden value='@item.PatientName'>
                        @*<asp:TextBox
                        runat="server" ReadOnly="true" AutoPostBack="true" Text='<%=@item.PatientName%>'></asp:TextBox>*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppDate)
                        <input type="text" name="AppDate" hidden value='@item.AppDate'>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppTime)
                        <input type="text" name="AppTime" hidden value='@item.AppTime'>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppStatus.Status)
                        <input type="text" name="Status" hidden value='@item.AppStatus.Status'>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>

                        @Html.ActionLink("Confirm", "Edit", new { id = item.AppID, @class = "btn btn-info" }, new { @class = "btn btn-info" })

                        @Html.ActionLink("Delete", "Delete", new { id = item.AppID, @class = "button-default link" }, new { onclick = "return confirm('Are you sure?');", @class = "btn btn-danger" })
                        @Html.ActionLink("Email", "SendEmail", new { id = item.AppID, @class = "btn btn-success" }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Details", "Details", new { id = item.AppID }, new { @class = "btn btn-success" })

                    </td>

                </tr>

           

            }
            else if (item.StatusID == 2)
            {
             
                <tr style="background:green">
                    <td>

                        @Html.DisplayFor(modelItem => item.PatientName)
                        <input type="text" name="Patient_Name" hidden value='@item.PatientName'>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppDate)
                        <input type="text" name="AppDate" hidden value='@item.AppDate'>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppTime)
                        <input type="text" name="AppTime" hidden value='@item.AppTime'>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppStatus.Status)
                        <input type="text" name="Status" hidden value='@item.AppStatus.Status'>
                    </td>
                    <td style="max-width:">
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>

                        @Html.ActionLink("Confirm", "Edit", new { id = item.AppID, @class = "btn btn-info" }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.AppID, @class = "button-default link" }, new { onclick = "return confirm('Are you sure?');", @class = "btn btn-danger" })
                        @Html.ActionLink("Email", "SendEmail", new { id = item.AppID, @class = "btn btn-success" }, new { @class = "btn btn-success" })
                    </td>

                </tr>

        
            }
            else if (item.StatusID == 3)
            {
                
                <tr style="background:red">
                    <td>

                        @Html.DisplayFor(modelItem => item.PatientName)
                        <input type="text" name="Patient_Name" hidden value='@item.PatientName'>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppDate)
                        <input type="text" name="AppDate" hidden value='@item.AppDate'>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppTime)
                        <input type="text" name="AppTime" hidden value='@item.AppTime'>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppStatus.Status)
                        <input type="text" name="Status" hidden value='@item.AppStatus.Status'>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>

                        @Html.ActionLink("Confirm", "Edit", new { id = item.AppID, @class = "btn btn-info" }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.AppID, @class = "button-default link" }, new { onclick = "return confirm('Are you sure?');", @class = "btn btn-danger" })
                        @Html.ActionLink("Email", "SendEmail", new { id = item.AppID, @class = "btn btn-success" }, new { @class = "btn btn-success" })
                    </td>

                </tr>

          

            }
        }
    </tbody>

</table>
<style>
    .btn {
        margin-bottom: 2px !important;
        width: 70px !important;
    }

    .dialog-ovelay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.50);
        z-index: 999999
    }

        .dialog-ovelay .dialog {
            width: 400px;
            margin: 100px auto 0;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(0,0,0,.2);
