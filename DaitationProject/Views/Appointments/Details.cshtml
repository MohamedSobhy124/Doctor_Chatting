@model DaitationProject.Entity.DoctorNotes


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Doctor Notes</h2>
@Html.ActionLink("Diagnosis", "Diagnosis", new { id = Model.AppId }, new { @class = "btn btn-success" })
 
    @if (ViewData["Error"] != null)
    {
        <div class="red">
            <p><strong>Error:</strong> @ViewData["Error"].ToString()</p>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="green">
            <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
        </div>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.DoctorNotesID)
        @Html.HiddenFor(model => model.AppId)
        <div class="form-group">
            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                @*@Html.ActionLink("Create", "Chat","User",new {Type= "submit" })*@
            </div>
        </div>

    }



